                    G2L["statusText"].Font = Enum.Font.Gotham
                    G2L["statusText"].TextSize = 12
                    G2L["statusText"].Size = UDim2.new(1, -40, 0, 20)
                    G2L["statusText"].Position = UDim2.new(0, 20, 1, -25)
                    G2L["statusText"].TextXAlignment = Enum.TextXAlignment.Left
                    G2L["statusText"].Parent = G2L["preloaderFrame"]
                    
