-- Scanning animation 
local scanningDots = 0
local scanningAnimation
local function updateScanningText()
    scanningDots = (scanningDots % 3) + 1
    G2L["statusText"].Text = "Scanning" .. string.rep(".", scanningDots)
end

-- UPDATED: Remote scanning function - now only looks for major backdoors
local function scanForRemotes()
    local startTime = tick()
    G2L["scanBtn"].Visible = false
    G2L["progressBg"].Visible = true
    G2L["statusText"].Text = "Scanning."
    
    scanningAnimation = game:GetService("RunService").Heartbeat:Connect(updateScanningText)
    
    for i = 1, 100 do
        G2L["progressFill"].Size = UDim2.new(i/100, 0, 1, 0)
        wait(0.02)
    end
    
    local foundRemotes = {}
    local services = game:GetDescendants()
    
    local backdoorPatterns = {
        "admin", "control", "system", "execute", "command", 
        "script", "remote", "function", "event", "backdoor",
        "server", "client", "request", "fire", "invoke"
    }
    
    for _, instance in pairs(services) do
        if instance:IsA("RemoteEvent") or instance:IsA("RemoteFunction") then
            local nameLower = string.lower(instance.Name)
            local pathLower = string.lower(instance:GetFullName())
            
            -- Check if this looks like a major backdoor
            local isMajorBackdoor = false
            
            -- Check name patterns
            for _, pattern in ipairs(backdoorPatterns) do
                if string.find(nameLower, pattern) or string.find(pathLower, pattern) then
                    isMajorBackdoor = true
                    break
                end
            end
            
            -- Check if it's in a suspicious location (like directly in Workspace or Lighting)
            local parent = instance.Parent
            if parent and (parent.Name == "Workspace" or parent.Name == "Lighting" or parent.Name == "ReplicatedStorage") then
                isMajorBackdoor = true
            end
            
            if isMajorBackdoor then
                table.insert(foundRemotes, instance)
            end
        end
    end
    
    scanningAnimation:Disconnect()
    
    local scanTime = string.format("%.2f", tick() - startTime)
    
    if #foundRemotes > 0 then
        G2L["statusText"].Text = "Found " .. #foundRemotes .. " potential backdoors in " .. scanTime .. "s!"
        
        -- Create the main UI after a short delay
        wait(1.5)
        G2L["preloader"]:Destroy()
        createMainUI(foundRemotes, scanTime)
    else
        G2L["statusText"].Text = "No major backdoors found in " .. scanTime .. "s"
        G2L["scanBtn"].Visible = true
        G2L["progressBg"].Visible = false
        G2L["progressFill"].Size = UDim2.new(0, 0, 1, 0)
    end
end

-- Scan button functionality 
G2L["scanBtn"].MouseButton1Click:Connect(scanForRemotes)

-- Hover effects for scan button 
G2L["scanBtn"].MouseEnter:Connect(function()
    game:GetService("TweenService"):Create(G2L["scanBtn"], TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 180)}):Play()
end)

G2L["scanBtn"].MouseLeave:Connect(function()
    game:GetService("TweenService"):Create(G2L["scanBtn"], TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(25, 25, 150)}):Play()
end)

